{
  "manifest_version": 3,
  "name": "GPT Rules",
  "version": "0.0.1",
  "description": "Enhance AI chat interfaces with custom rules and context management",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://chat.openai.com/*", "https://claude.ai/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
